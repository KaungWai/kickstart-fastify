{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "outDir": "./dist",
        "noEmitOnError": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}