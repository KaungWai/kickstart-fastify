// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId     String     @id @db.VarChar(12)
  userName   String     @db.VarChar(100)
  salt       String     @db.VarChar(16)
  hash       String     @db.VarChar(64)
  permission Permission
  created_at DateTime   @default(now()) @db.Timestamp()
  updated_at DateTime   @default(now()) @db.Timestamp()
}

model Task {
  taskId          String     @id @db.VarChar(12)
  taskTitle       String     @db.VarChar(100)
  taskDescription String     @db.VarChar(500)
  taskColor       String     @db.VarChar(20)
  taskStatus      TaskStatus @default(NEW)
  created_at      DateTime   @default(now()) @db.Timestamp()
  updated_at      DateTime   @default(now()) @db.Timestamp()
}

enum TaskStatus {
  NEW
  ONGOING
  DONE
}

enum Permission {
  READ_ONLY
  READ_WRITE
}
